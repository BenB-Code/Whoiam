{
  "categories": [
    {
      "title": "## 🚀 Features",
      "labels": ["feature", "enhancement", "feat"]
    },
    {
      "title": "## 🧨 Tests",
      "labels": ["feature", "enhancement", "feat"]
    },
    {
      "title": "## 🐛 Bug Fixes",
      "labels": ["bug", "fix"]
    },
    {
      "title": "## 📝 Documentation",
      "labels": ["documentation", "docs"]
    },
    {
      "title": "## 🔧 Maintenance",
      "labels": ["chore", "dependencies", "refactor"]
    },
    {
      "title": "## 🎨 Style",
      "labels": ["style", "ui", "design"]
    }
  ],
  "template": "#{{CHANGELOG}}\n\n**Full Changelog**: #{{RELEASE_DIFF}}",
  "pr_template": "- #{{TITLE}} (#{{NUMBER}})",
  "empty_template": "- No changes",
  "label_extractor": [
    {
      "pattern": "^(feat|feature)(\\(.+\\))?:",
      "target": "$1"
    },
    {
      "pattern": "^(test)(\\(.+\\))?:",
      "target": "$1"
    },
    {
      "pattern": "^(fix|bug)(\\(.+\\))?:",
      "target": "$1"
    },
    {
      "pattern": "^(docs?|documentation)(\\(.+\\))?:",
      "target": "$1"
    },
    {
      "pattern": "^(chore|refactor|style)(\\(.+\\))?:",
      "target": "$1"
    }
  ]
}
